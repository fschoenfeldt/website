<div x-data="{ressource: {}}" 
     class="modal" 
     x-ref="addPriceModal" 
     x-show="$store.manager.modalVisible" 
     @showaddpricemodal.window="$store.manager.showAddPriceModal">
    <div class="modal__content" @click.outside="$store.manager.hideAddPriceModal" @keyup.escape="$store.manager.hideAddPriceModal">
        <div class="w-full flex items-center text-xl space-x-2 h-full">
            <img :src="ressource.path"/>
            <div class="text-cyan-200 font-sans" x-text="ressource.name"></div>
            <button label="close" 
                        class="font-sans p-2 border-2 border-red-400 !text-red-400 
                               font-bold flex items-center justify-center h-12 w-12 shrink-0 !ml-auto hover:!bg-red-400/20" 
                        @click="$store.manager.hideAddPriceModal">
                    ✕
                </button>
        </div>

        <div>
            <div class="w-full flex justify-between items-center px-2 py-0.5"
                 x-show="ressource?.priceHistory?.length">
                <div class="text-cyan-200 font-sans textl-xl" x-text="ressource.min && `↓${ressource.min}`"></div>
                <div class="text-cyan-200 font-sans text-xl" x-text="ressource.average && `⌀${ressource.average}`"></div>
                <div class="!text-amber-200 font-sans text-xl font-bold" x-text="ressource.max && `↑${ressource.max}`"></div>
            </div>
            <div x-show="ressource?.priceHistory?.length">
                <canvas id="priceHistoryChart" :aria-label="`price history of ${ressource?.name || ''}`"></canvas>
            </div>
            <div x-show="!ressource?.priceHistory?.length" class="border border-dashed border-cyan-200 p-6 w-full text-cyan-200 font-sans text-center italic">
                no data for graph.. yet
            </div>
        </div>

        <div class="h-full flex space-x-4 justify-center">
            <div class="flex flex-col items-center justify-center">
                <template x-if="ressource.recipe">
                    {# <div class="text-cyan-200" x-text="JSON.stringify(ressource.recipe)"></div>
                    <hr> #}
                    <template x-for="(ingredient, index) in ressource.recipe">
                        <div x-data="{ingredientFound: $store.manager.getByName($store.manager, ingredient.name)}"
                             class="flex flex-col items-center justify-center">
                            <img :src="ingredientFound.path" class="w-12"/>
                            <div class="text-cyan-200" x-text="`${ingredient.amount}x ${ingredient.name}`"></div>
                            <template x-if="ingredientFound.average">
                                <div class="text-cyan-200" x-text="`⌀⨯ ${Math.floor(ingredientFound.average * ingredient.amount)}`"></div>
                            </template>
                            <template x-if="!ingredientFound.average">
                                <div class="text-cyan-200/60">no price data</div>
                            </template>
                            <div x-show="ressource?.recipe?.length > 1 && index < ressource?.recipe?.length-1" class="text-cyan-200 flex items-center text-4xl font-bold font-sans">
                                +
                            </div>
                        </div>
                    </template>
                </template>
            </div>
            <div>
                <template x-if="ressource.recipe">
                    <div class="h-full flex items-center space-x-4">
                        <div class="flex flex-col">
                            <div x-data="{sum: ressource.recipe.reduce((prev, ingredient) => {
                                                const ingredientFound = $store.manager.getByName($store.manager, ingredient.name)
                                                return ingredientFound.average * ingredient.amount + prev;
                                                }, 0)}" x-show="ressource?.recipe?.length > 1 && sum" class="text-cyan-200 flex items-center text-2xl font-bold font-sans">
                                ∑⌀ = <span class="text-cyan-200 flex items-center text-2xl font-bold font-sans"
                                     x-text="Math.floor(sum)"></span>
                            </div>
                            <div class="text-cyan-200 flex items-center justify-center text-4xl font-bold font-sans">
                                →
                            </div>
                        </div>
                        <div class="flex flex-col items-center">
                            <img :src="ressource.path" class="w-12"/>
                            <div class="text-cyan-200" x-text="ressource.name"></div>
                            <div class="text-cyan-200 font-sans text-xl" x-text="ressource.average ? `⌀${ressource.average}` : `no price data`"></div>
                        </div>
                    </div>
                </template>
            </div>
        </div>

        <form class="flex flex-col space-y-4" @submit.prevent="$store.manager.handleModal">
            <label class="font-sans text-cyan-200 text-lg" 
                       for="number_input">
                       new price:
            </label>
            <input x-ref="name" type="text" hidden/>
            <input class="text-3xl font-sans bg-transparent border border-cyan-200
                            bg-slate-700 p-2 text-cyan-200 text-center" 
                       x-ref="input" 
                       type="number" 
                       name="value" 
                       id="number_input"
                       min="1"
                       max="9999"
                       required>
            <button class="font-sans p-2 border">Submit</button>
        </form>

    </div>
</div>
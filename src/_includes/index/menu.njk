              href="/project_manager" | url,
              title="learn more",
              customClasses="relative z-10 no-underline",
              sublabel="learn more",
              sublabelClasses="w-max text-cyan-200 underline"
            ) %}
            <span class="w-max text-cyan-200">space haven manager</span>
            {% endcall %}
          </div>
        </div>
      </li>
      <li class="col-span-8">
        {{ linkComponent.link(
          href="https://unsplash.com/@fschoenfeldt",
          text="photography",
          external=true,
          title="my photos",
          customClasses="no-underline",
          sublabel="gallery",
          sublabelClasses="fill-white hover:fill-white underline text-white",
          showIcon=true
        ) }}
      </li>
      <li class="col-span-4">
        {{ linkComponent.link(
          href="https://soundcloud.com/frederikschoenfeldt",
          text="tunes",
          external=true,
          title="my tunes",
          customClasses="no-underline",
          sublabel="soundcloud",
          sublabelClasses="fill-white hover:fill-white underline text-white",
          showIcon=true
        ) }}

<div>
  <nav>
    <p>menu</p>
    <ul class="menu">
      <li class="col-span-5">
        {{ linkComponent.link(
          href="https://blog.fschoenfeldt.de/",
          text="blog",
          external=true,
          title="my blog",
          customClasses="no-underline",
          sublabel="blog.fschoenfeldt.de",
          sublabelClasses="fill-white hover:fill-white underline text-white",
          showIcon=true
        ) }}
      </li>
      <li class="col-span-2">
        {{ linkComponent.link(
          href="mailto:frederikschoenfeldt@gmail.com",
          text="hello",
          title="contact me via email",
          customClasses="no-underline",
          sublabel="frederikschoenfeldt@gmail.com",
          sublabelClasses="underline text-white"
        ) }}
      </li>
      <li class="projects relative col-span-5">
        <div class="relative z-10 flex p-4">projects</div>
        <div class="bg-white md:grid md:grid-cols-2">
